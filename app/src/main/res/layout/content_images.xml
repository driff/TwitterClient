<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    cardview:cardUseCompatPadding="true"
    cardview:contentPadding="@dimen/dgts__padding_title"
    cardview:cardCornerRadius="6dp"
    cardview:cardElevation="@dimen/cardview_default_elevation">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:cardview="http://schemas.android.com/apk/res-auto">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtUser"
            android:hint="UserName"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:paddingLeft="@dimen/tw__card_spacing_small"
            android:layout_marginLeft="@dimen/appbar_padding_top"
            android:layout_marginRight="@dimen/appbar_padding_top"
            android:layout_alignBottom="@+id/imgMedia"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgMedia"
            android:layout_marginLeft="@dimen/appbar_padding_top"
            android:layout_marginRight="@dimen/appbar_padding_top"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTweet"
            android:layout_marginBottom="@dimen/appbar_padding_top"
            android:layout_marginLeft="@dimen/appbar_padding_top"
            android:layout_marginRight="@dimen/appbar_padding_top"
            android:layout_below="@+id/imgMedia"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>