<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimaryLight"
    android:theme="@style/AppTheme.NoActionBar"
    cardview:cardCornerRadius="6dp"
    cardview:cardElevation="@dimen/cardview_default_elevation"
    cardview:cardUseCompatPadding="true"
    cardview:contentPadding="@dimen/cardview_content_padding_small"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/imgMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgMedia"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUser"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:textAppearanceMedium"
            android:textIsSelectable="true" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtTweet"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/cardview_content_padding_small"
            android:layout_marginRight="@dimen/cardview_content_padding_small" />


        <ImageButton
            android:id="@+id/btnRT"
            android:layout_width="@dimen/timeline_button_size"
            android:layout_height="@dimen/timeline_button_size"
            android:layout_below="@+id/recyclerView"
            android:layout_toLeftOf="@+id/btnFav"
            android:backgroundTint="@android:color/transparent"
            android:src="@android:drawable/stat_notify_sync_noanim"
            android:tint="@color/tw__medium_gray" />

        <ImageButton
            android:id="@+id/btnFav"
            android:layout_width="@dimen/timeline_button_size"
            android:layout_height="@dimen/timeline_button_size"
            android:layout_below="@+id/recyclerView"
            android:layout_toLeftOf="@+id/btnShare"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/tw__action_heart_off_default"
            android:tint="@color/tw__medium_gray" />

        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="@dimen/timeline_button_size"
            android:layout_height="@dimen/timeline_button_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/recyclerView"
            android:backgroundTint="@android:color/transparent"
            android:src="@android:drawable/ic_menu_share"
            android:tint="@color/tw__medium_gray" />
    </RelativeLayout>
</android.support.v7.widget.CardView>