<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.NoActionBar"
    cardview:cardUseCompatPadding="true"
    cardview:contentPadding="@dimen/dgts__padding_title"
    cardview:cardCornerRadius="6dp"
    cardview:cardElevation="@dimen/cardview_default_elevation">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgMedia"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/appbar_padding_top"
            android:layout_marginRight="@dimen/appbar_padding_top"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:id="@+id/txtUser"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_below="@id/imgMedia"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/txtTweet"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/txtUser"
            android:layout_centerHorizontal="true"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTweet"
            android:layout_alignParentEnd="true" />


        <ImageButton
            android:layout_width="@dimen/timeline_button_size"
            android:layout_height="@dimen/timeline_button_size"
            android:id="@+id/btnRT"
            android:tint="@color/tw__medium_gray"
            android:src="@android:drawable/stat_notify_sync_noanim"
            android:layout_below="@+id/recyclerView"
            android:layout_toLeftOf="@+id/btnFav"/>

        <ImageButton
            android:layout_width="@dimen/timeline_button_size"
            android:layout_height="@dimen/timeline_button_size"
            android:id="@+id/btnFav"
            android:src="@drawable/tw__action_heart_off_default"
            android:tint="@color/tw__medium_gray"
            android:layout_below="@+id/recyclerView"
            android:layout_toLeftOf="@+id/btnShare" />

        <ImageButton
            android:layout_width="@dimen/timeline_button_size"
            android:layout_height="@dimen/timeline_button_size"
            android:id="@+id/btnShare"
            android:tint="@color/tw__medium_gray"
            android:src="@android:drawable/ic_menu_share"
            android:layout_below="@+id/recyclerView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>