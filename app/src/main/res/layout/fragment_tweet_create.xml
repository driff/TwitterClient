<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimary"
    android:theme="@style/AppTheme.NoActionBar"
    cardview:cardCornerRadius="6dp"
    cardview:cardElevation="@dimen/cardview_default_elevation"
    cardview:cardUseCompatPadding="true"
    cardview:contentPadding="@dimen/cardview_content_padding_small"
    tools:context=".tweetit.ui.TweetitFragment"
    tools:targetApi="lollipop">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorFontDark">

            <EditText
                android:id="@+id/txtContent"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tweet_create_input_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:backgroundTint="@color/colorFontDark"
                android:elegantTextHeight="true"
                android:gravity="top|clip_horizontal"
                android:hint="@string/tweet_create_input_hint"
                android:maxLength="140"
                android:textColor="@color/colorFontDark"
                android:textColorHint="@color/colorFontDark"
                android:textIsSelectable="true" />
        </android.support.design.widget.TextInputLayout>

        <ImageButton
            android:id="@+id/button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_round"
            android:backgroundTint="@color/colorAccent"
            android:foregroundTint="@android:color/white"
            android:foregroundTintMode="src_in"
            android:src="@android:drawable/ic_menu_send" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
